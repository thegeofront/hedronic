{
    "name": "geofront",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "install-all": "cd ../engine npm install && npm install",
        
        "build-plugins": "npm run build-startin && npm run build-std && npm run build-min-rust && build-copc",
        "build-startin": "cd plugins/startin-gf && wasm-pack build --out-dir ../../public/plugins/startin --target web --release",
        "build-std": "cd plugins/std-gf && wasm-pack build --out-dir ../../public/plugins/std --target web --release",
        "build-min-rust": "cd plugins/rust-min-gf && wasm-pack build --out-dir ../../public/plugins/rust-min --target web --release",
        "build-copc": "cd plugins/copc-gf && wasm-pack build --out-dir ../../public/plugins/copc --target web --release",

        "build": "webpack --mode production --env=prod",
        "build-production-and-publish": "webpack --mode production --env=prod && cd ../www && cp -r ../public . && git add . && git commit -m 'auto-update' && git push",
        "build-dev": "webpack --env=dev",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch": "webpack --watch --mode development",
        "start": "npm run watch"
    },
    "keywords": [
        "geon",
        "vpl"
    ],
    "author": "Jos Feenstra",
    "license": "",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.20.0",
        "eslint": "^7.23.0",
        "terser-webpack-plugin": "^5.1.3",
        "ts-loader": "^8.0.5",
        "typescript": "^4.6.2",
        "webpack": "^5.1.3",
        "webpack-cli": "^4.0.0",
        "webpack-dev-server": "^3.11.0",
        "webpack-split-by-path": "^2.0.0"
    },
    "dependencies": {
        "@alenaksu/json-viewer": "^1.0.0"
    }
}
